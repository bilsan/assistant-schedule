<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="ru.kai.assistantschedule.processing.internal.ProcessingPerspective"
            icon="icons/processing.png"
            id="ru.kai.assistantschedule.processing.perspective"
            name="Обработки"
            sort="20">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Обработки"
            class="ru.kai.assistantschedule.processing.ProcessingView"
            id="ru.kai.assistantschedule.processing.view">
      </view>
      <view
            class="ru.kai.assistantschedule.schedule.ScheduleView"
            id="ru.kai.assistantschedule.processing.schedule.view"
            name="Расписание">
      </view>
      <view
            class="ru.kai.assistantschedule.load.LoadView"
            id="ru.kai.assistantschedule.processing.load.view"
            name="Нагрузка">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ru.kai.assistantschedule.processing.perspective">
         <view
               closeable="false"
               id="ru.kai.assistantschedule.processing.view"
               relationship="stack"
               relative="leftFolder"
               visible="true">
         </view>
         <view
               closeable="false"
               id="ru.kai.assistantschedule.processing.schedule.view"
               relationship="stack"
               relative="rightFolder"
               visible="true">
         </view>
         <view
               closeable="false"
               id="ru.kai.assistantschedule.processing.load.view"
               relationship="stack"
               relative="rightFolder"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
